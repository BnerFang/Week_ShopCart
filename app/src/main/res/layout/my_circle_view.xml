<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/new_bg">

        <TextView
            android:id="@+id/my_circle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:text="XXXXXXXXXXX"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/my_circle_img"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@id/my_circle_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/new_bg" />

        <ImageView
            android:id="@+id/my_circle_imgs"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@id/my_circle_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_toRightOf="@id/my_circle_img"
            android:background="@drawable/new_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_below="@id/my_circle_img">

            <TextView
                android:id="@+id/my_circle_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="XXXXX"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/my_circle_dz"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/my_circle_num"
                android:src="@mipmap/common_btn_prise_n" />

            <TextView
                android:id="@+id/my_circle_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:text="123"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>