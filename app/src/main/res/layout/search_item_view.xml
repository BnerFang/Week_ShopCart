<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_184"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/new_bg">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/s_item_img"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:layout_margin="@dimen/dp_10"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/s_item_name"
            android:layout_width="@dimen/dp_131"
            android:layout_height="wrap_content"
            android:text="XXXXXXX"
            android:layout_below="@id/s_item_img"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/s_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXXXXX"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/s_item_name"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

</LinearLayout>