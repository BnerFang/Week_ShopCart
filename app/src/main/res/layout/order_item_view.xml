<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/img_shape_bg"
    android:layout_marginTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/dh_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/order_item_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dh_order"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/dh_order"
            android:text="XXXXXXX"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/order_item_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dh_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="xxxx-xx-xx"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:id="@+id/order_layout1"
            android:layout_width="@dimen/dp_292"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_item_orderid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/foot_shape_bg">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/order_item_img"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@id/order_item_img"
                android:ellipsize="end"
                android:lines="2"
                android:text="XXXXXX"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/order_item_img"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/order_item_img"
                android:text="￥123.00"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_14" />

            <com.fsy.bawayshop.customer.CustomView
                android:id="@+id/order_item_addsubsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/order_item_img"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/order_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/order_layout1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:id="@+id/g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/g"
                android:text="0"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_count"
                android:text="件商品，需付款"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/x"
                android:text="0.00"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_price"
                android:text="元"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color666"
            android:gravity="center"
            android:layout_below="@id/order_Layout"
            android:text="取消订单"
            android:background="@drawable/img_shape_bg"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:text="去支付"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_below="@id/order_Layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorWhite"
            android:background="@drawable/adds_btn_shape_bg"/>

    </RelativeLayout>

</RelativeLayout>