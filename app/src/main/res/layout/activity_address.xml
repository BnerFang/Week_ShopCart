<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddressActivity">

    <RelativeLayout
        android:id="@+id/adds_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adds_heander"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:text="我的收货地址"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/adda_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color666"
            android:layout_alignBottom="@id/adds_heander"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:text="完成" />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/adds_rv"
        android:layout_below="@id/adds_layout"
        android:layout_above="@id/adds_btn"/>


    <Button
        android:id="@+id/adds_btn"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorWhite"
        android:text="新增收货地址"
        android:background="@drawable/adds_btn_shape_bg"/>


</RelativeLayout>