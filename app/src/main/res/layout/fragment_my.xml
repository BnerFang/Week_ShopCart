<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/my_bitmap_bag"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_142"
        android:background="@drawable/my_fragment_shape">


        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:text="我是吃不胖的小姐姐"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/information"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/my_name"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_70"
            android:src="@mipmap/my_icon_information_n" />

        <TextView
            android:id="@+id/my_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/information"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/information"
            android:text="个人资料"
            android:textColor="@color/color666" />

        <View
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/my_information"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/my_shape_bg" />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/information"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/my_icon_circle_n" />

        <TextView
            android:id="@+id/my_circle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/circle"
            android:text="我的圈子"
            android:textColor="@color/color666" />

        <View
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/my_circle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/my_shape_bg" />

        <ImageView
            android:id="@+id/foot"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/circle"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/my_icon_foot_n" />

        <TextView
            android:id="@+id/my_foot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/foot"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/foot"
            android:text="我的足迹"
            android:textColor="@color/color666" />

        <View
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/my_foot"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/my_shape_bg" />

        <ImageView
            android:id="@+id/wallet"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/foot"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/my_icon_wallet_n" />

        <TextView
            android:id="@+id/my_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/wallet"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/wallet"
            android:text="我的钱包"
            android:textColor="@color/color666" />

        <View
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/my_wallet"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/my_shape_bg" />

        <ImageView
            android:id="@+id/address"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/wallet"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/my_icon_address_n" />

        <TextView
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_alignBottom="@id/address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/address"
            android:text="我的收货地址"
            android:textColor="@color/color666" />

        <View
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/my_address"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/my_shape_bg" />

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        fresco:backgroundImage="@mipmap/bitmap_my_copy"
        fresco:roundAsCircle="true"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="false"
        fresco:roundedCornerRadius="@dimen/dp_1"
        fresco:roundingBorderWidth="1px"
        fresco:roundingBorderColor="#9999"/>


</RelativeLayout>