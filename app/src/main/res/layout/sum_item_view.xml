<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_292"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/sum_shape_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sum_item_img"
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_81"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10" />

        <TextView
            android:id="@+id/sum_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/sum_item_img"
            android:ellipsize="end"
            android:lines="2"
            android:text="XXXXXXXXXXXX"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/sum_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sum_item_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/sum_item_img"
            android:text="ï¿¥100.00"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_14" />

        <com.fsy.bawayshop.customer.CustomView
            android:id="@+id/sum_item_addsubnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sum_item_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10" />


    </RelativeLayout>


</RelativeLayout>