<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cart_layout"
        android:layout_marginTop="@dimen/dp_40" />

    <RelativeLayout
        android:id="@+id/cart_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/cart_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="全选" />

        <TextView
            android:id="@+id/cart_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/cart_box"
            android:text="合计：￥1360"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_12" />


        <Button
            android:id="@+id/cart_sumNuber"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:background="#ff5e70"
            android:text="去结算"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

</RelativeLayout>